<div class="row">
  <div class="col-md-5">
    <h2>Creating Order for: {{customer.firstName}} {{customer.lastName}}</h2>
    <hr>
    <h3>Cake Information</h3>
  </div>

  <div class="col-md-7">

  </div>
</div>

<div class="row">
  <div class="col-md-5">
    <form class="form new-customer-form">
      <div class="row">
        <div class="col-sm-6 form">
          <label for="name-signup">Pick-up Date</label>

          {{!-- This needs to get information from reports.js --}}
          
          <input class="form-input" type="text" class="span2" id="dp1">

        </div>
        <div class="col-sm-6 form">
          <label for="name-signup">Pick-up Time</label>
          <input class="form-input" type="number" id="pickup-time">
        </div>
      </div>
      <div class="row">
        <div class="col-sm-6 form">
          <label for="flavor-picker">Flavor</label>
          <select class="form-input" type="text" id="flavor" name="flavor-picker">
            {{#each flavors }}
            <option value={{id}} {{#selected}}selected="selected" {{/selected}}>{{flavor_name}}</option>
            {{/each}}
          </select>
          </p>
        </div>

        <div class="col-sm-3 form">
          <label for="name-signup">Size</label>
          <select class="form-input" type="text" id="size" name="size-picker">
            {{#each sizes}}
            <option value={{id}} data-price={{base_price}} {{#selected}}selected="selected" {{/selected}}>{{size}}
            </option>
            {{/each}}
          </select>
        </div>
        <div class="col-sm-3 form">
          <label for="product-type">Type</label>
          <select class="form-input" type="text" id="type" name="product-type">
            {{#each productType }}
            <option value={{id}} {{#selected}}selected="selected" {{/selected}}>{{product_type}}</option>
            {{/each}}
          </select>
        </div>
      </div>
      <div class="row">
        {{!-- How might we add this automatically as soon as we select FLAVOR? --}}
        <div class="col-sm-6 form">
          <label for="dough-info">Dough</label>
          <select class="form-input" type="text" id="dough" name="dough-picker">
            {{#each flavors }}
            <option value={{id}} {{#selected}}selected="selected" {{/selected}}>{{dough_type}}</option>
            </option>
            {{/each}}
          </select>
        </div>

        {{!-- How might we link the price with the size of the cake? --}}

        <div class="col-sm-3 form">
          <label for="name-signup">Price</label>
          <select class="form-input" type="text" id="price" name="price-picker">
            {{#each sizes }}
            <option value={{id}} {{#selected}}selected="selected" {{/selected}}>{{base_price}}</option>
            {{/each}}
          </select>
        </div>
        <div class="col-sm-3 form">
          <label for="name-signup">Additional Price</label>
          <input class="form-input" type="number" id="additional-price">
        </div>
      </div>
      <div class="form">
        <label for="name-signup">Description</label>
        <input class="form-input" type="text" id="address-two" />
      </div>
      <div class="form-group">
        <label for="name-signup">Add Link of image:</label>
        <input class="form-input" type="text" id="address-two" />
      </div>

      <div class="form-group">
        <button class="btn btn-primary form-input" type="submit">Create Customer</button>
      </div>
    </form>
  </div>
  {{!-- spacer --}}
  <div class="col-md-1"></div>
  {{!-- search bar in collumn 2 --}}
  <div class="col-md-5">
    <form class="form customer-search-form py-4">
      <div class="form-group">
        <label for="email-signup"></label>
        {{!-- form-input class in needed but it messes with the formating --}}
        <ul class="menu">
          <li><input type="search" placeholder="Search"></li>
          <li><button type="button" class="button">Search</button></li>
        </ul>
      </div>
    </form>
    {{#if customers.length}}
    <div class="col-md-6 project-list">
      <h3>Current Customers:</h3>

      {{#each customers as |customer|}}
      <div class="row mb-2">
        <div class="col-md-8">
          <h4><a href="/project/{{customer.id}}">{{customer.firstName}}</a></h4>
        </div>
        <div class="col-md-4">
          <button class="btn btn-sm btn-danger" data-id="{{customer.id}}">DELETE</button>
        </div>
      </div>
      {{/each}}
    </div>
    {{/if}}
  </div>
  {{!-- <ul class="menu">
    <li><input type="search" placeholder="Search"></li>
    <li><button type="button" class="button">Search</button></li>
  </ul> --}}
</div>



