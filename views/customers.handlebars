<div class="row">
  <div class="col-md-6">
    <h2>New Customer</h2>
  </div>
  <div class="col-md-6">
    <h2>Existing Customer</h2>
  </div>
</div>

<div class="row">
  <div class="col-md-5">
    <form class="form new-customer-form">
      <div class="form-group">
        <label for="first-name">Fist Name</label>
        <input class="form-input" type="text" id="first-name" name="first-name"/>
      </div>
      <div class="form-group">
        <label for="last-name">Last Name</label>
        <input class="form-input" type="text" id="last-name" name="last-name"/>
      </div>
      <div class="form-group">
        <label for="phone-number">Phone Number</label>
        <input class="form-input" type="tel" id="phone-number" name="phone-number"/>
      </div>
       <div class="form-group">
        <label for="email">Email</label>
        <input class="form-input" type="email" id="email" name="email"/>
      </div>
       <div class="form-group">
        <label for="address">Address</label>
        <input class="form-input" type="text" id="address" name="address"/>
      </div>
       <div class="form-group">
        <label for="address-two">Address Line 2</label>
        <input class="form-input" type="text" id="address-two" name="address-two"/>
      </div>
      <div class="row"> 
      <div class="col-sm-6 form-group">
        <label for="city">City</label>
        <input class="form-input" type="text" id="city" name="city">
      </div>
      <div class="col-sm-6 form-group">
        <label for="zip-code">Zip Code</label>
        <input class="form-input" type="number"  id="zip-code" name="zip-code">
      </div>
      </div>
      <div class="form-group">
        {{!-- may need to take out form input on the class --}}
        <button type="submit" class="btn btn-primary form-input">Create Customer</button>
      </div>
    </form>
  </div>
  {{!-- spacer --}}
  <div class="col-md-1"></div>
  {{!-- search bar in collumn 2 --}}
  <div class="col-md-5">
    <form class="form customer-search-form py-4">
      <div class="form-group">
        <label for="email-signup"></label>
        {{!-- form-input class in needed but it messes with the formating --}}
        <ul class="menu">
        <li><input  type="search" placeholder="Search"></li>
        <li><button  type="button" class="button">Search</button></li>
        </ul>
      </div>
    </form>
    {{#if customers.length}}
  <div class="col-md-6 project-list">
    <h3>Current Customers:</h3>

    {{#each customers as |customer|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/project/{{customer.id}}">{{customer.firstName}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{customer.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
  </div>
  {{!-- <ul class="menu">
    <li><input type="search" placeholder="Search"></li>
    <li><button type="button" class="button">Search</button></li>
  </ul> --}}
</div>

<script src="./js/customer.js"></script>